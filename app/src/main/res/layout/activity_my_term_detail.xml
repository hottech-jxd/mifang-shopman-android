<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout
    android:id="@+id/myterm_detail_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F0EFF5"
    android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:clipToPadding="true"
    tools:context="com.huotu.android.mifang.activity.MyTermDetailActivity">

    <include android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        layout="@layout/layout_header_2"
        android:id="@+id/mytermdetail_header"/>


    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/mytermdetail_column"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mytermdetail_header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/black"
            android:text="综合"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <View android:layout_height="40dp"
            android:layout_width="1dp"
            android:background="#d1d1d1"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="时间"
            android:drawableRight="@mipmap/arrow_down"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <View android:layout_height="40dp"
            android:layout_width="1dp"
            android:background="#d1d1d1"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="积分"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow_down"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <View android:layout_height="40dp"
            android:layout_width="1dp"
            android:background="#d1d1d1"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
        <TextView
            android:drawablePadding="5dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="粉丝"
            android:drawableRight="@mipmap/arrow_down"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <View android:layout_height="40dp"
            android:layout_width="1dp"
            android:background="#d1d1d1"/>
        <TextView
            android:id="@+id/mytermdetail_filter"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="筛选"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/mytermdetail_column"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/myterm_detail_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
                android:visibility="visible"
                android:id="@+id/myterm_detail_lay_select"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mytermdetail_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:layout_width="120dp"
                    android:layout_height="80dp">

                    <View
                        android:background="@drawable/shape_order_time_down_up_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                    <View
                        android:background="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>
                    <View
                        android:background="@drawable/shape_order_time_up_down_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <View
                            android:background="@drawable/shape_order_time_down_up_bg"
                            android:layout_width="50dp"
                            android:layout_height="20dp" />
                        <com.aigestudio.wheelpicker.widgets.WheelYearPicker
                            android:background="@android:color/white"
                            android:id="@+id/myterm_detail_select_year"
                            app:wheel_item_text_color="@android:color/black"
                            app:wheel_curtain_color="@color/colorAccent"
                            app:wheel_item_space="3dp"
                            app:wheel_item_text_size="16sp"
                            app:wheel_item_align="center"
                            app:wheel_curved="true"
                            app:wheel_visible_item_count="4"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="@drawable/shape_order_time_up_down_bg"
                            android:layout_width="50dp"
                            android:layout_height="20dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="6dp"
                        android:layout_height="16dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <View
                            android:background="@drawable/shape_order_time_down_up_bg"
                            android:layout_width="50dp"
                            android:layout_height="20dp" />
                        <com.aigestudio.wheelpicker.widgets.WheelMonthPicker
                            android:background="@android:color/white"
                            android:id="@+id/myterm_detail_select_month"
                            app:wheel_item_text_color="@android:color/black"
                            app:wheel_curtain_color="@color/colorAccent"
                            app:wheel_curved="true"
                            app:wheel_item_space="3dp"
                            app:wheel_item_text_size="16sp"
                            app:wheel_item_align="center"
                            app:wheel_visible_item_count="4"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content" />
                        <View
                            android:background="@drawable/shape_order_time_up_down_bg"
                            android:layout_width="50dp"
                            android:layout_height="20dp" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


</android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/myterm_detail_lay_filter"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
        android:background="@android:color/white"
        android:id="@+id/myterm_detail_lay_filter_recyclerview"
        android:layout_width="240dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

        <LinearLayout
            android:background="@android:color/white"
            android:padding="0dp"
            android:orientation="horizontal"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/myterm_detail_reset"
                android:layout_width="0dp"
                android:text="重置"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:background="#F5F5F5"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/myterm_detail_ok"
                android:layout_width="0dp"
                android:text="完成"
                android:gravity="center"
                android:background="#E41436"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
