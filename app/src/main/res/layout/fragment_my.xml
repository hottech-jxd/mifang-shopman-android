<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFF5"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MyFragment">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:text="店主中心"
                android:textColor="#414141"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#F0EFF5"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </LinearLayout>


        <LinearLayout
            android:visibility="visible"
            android:id="@+id/my_lay_tip"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:background="#5FA5FA"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/my_message_tip"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:text=""
                android:singleLine="true"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/my_message_deal"
                android:textSize="12sp"
                android:text="立即处理"
                android:padding="5dp"
                android:background="@drawable/style_my_deal_bg"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!--<android.support.design.widget.CollapsingToolbarLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:fitsSystemWindows="true"-->
            <!--app:statusBarScrim="@color/white"-->
            <!--app:title="店主中心"-->
            <!--app:titleEnabled="false"-->
            <!--app:layout_scrollFlags="scroll|exitUntilCollapsed">-->
            <!---->
        <!--</android.support.design.widget.CollapsingToolbarLayout>-->


    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="0dp"
        android:id="@+id/my_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.6"
                android:id="@+id/my_lay_avator"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_marginTop="0dp"
                android:padding="10dp"
                android:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/my_setting"
                    android:text="设置"
                    android:textColor="#716F72"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/my_avator"
                        app:failureImage="@mipmap/ic_launcher"
                        app:placeholderImage="@mipmap/ic_launcher"
                        app:actualImageScaleType="centerCrop"
                        android:layout_width="70dp"
                        android:layout_height="70dp" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/my_name"
                        android:text="觅方"
                        android:textColor="#6D6D6D"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/shape_promotion_type_bg"
                        android:text="营养师"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:id="@+id/my_account_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/my_qrcode"
                    android:src="@mipmap/qrcode"
                    android:layout_width="32dp"
                    android:layout_height="32dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F0EFF5" />

            <LinearLayout
                android:background="@android:color/white"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/time"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />
                <TextView
                    android:id="@+id/my_ExpireTime"
                    android:textColor="#1E1E1E"
                    android:layout_marginLeft="6dp"
                    android:text="到期时间:2019-08-08(剩365天)"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:id="@+id/my_repay"
                    android:text="续费"
                    android:background="@drawable/shape_my_repay_bg"
                    android:textColor="#1E1E1E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:background="#DADADC"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <View
                android:layout_marginTop="8dp"
                android:background="#DADADC"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:id="@+id/my_lay_wallet"
                android:background="@drawable/style_row_bg"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="我的钱包"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="提现"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/arrowrightgray"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </LinearLayout>

            <View
                android:background="#F0EFF5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/my_lay_waitaccounts"
                    android:background="@drawable/style_row_bg"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/my_waitaccounts"
                        android:text="0"
                        android:textColor="#E50D26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="12sp"
                        android:text="待结算"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="#F0EFF5"
                    android:layout_height="55dp" />
                <LinearLayout
                    android:background="@drawable/style_row_bg"
                    android:id="@+id/my_lay_balance"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/my_balance"
                        android:text="0"
                        android:textColor="#E50D26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="12sp"
                        android:text="余额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="#F0EFF5"
                    android:layout_height="55dp" />
                <LinearLayout
                    android:id="@+id/my_lay_mibean"
                    android:background="@drawable/style_row_bg"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="0"
                        android:id="@+id/my_mibean"
                        android:textColor="#E50D26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="觅豆"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>


            <com.youth.banner.Banner
                android:layout_marginTop="5dp"
                android:id="@+id/my_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="8dp"
                android:background="#DADADC"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="常用功能"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:background="#F0EFF5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <LinearLayout
                android:padding="0dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/style_row_bg"
                    android:id="@+id/my_lay_income"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/shouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="收益"
                        android:textColor="#818181"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="#F0EFF5"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="@drawable/style_row_bg"
                    android:padding="10dp"
                    android:id="@+id/my_lay_order"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="推广订单"
                        android:textColor="#818181"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="#F0EFF5"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="@drawable/style_row_bg"
                    android:padding="10dp"
                    android:id="@+id/my_lay_myterm"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="我的团队"
                        android:textSize="12sp"
                        android:textColor="#818181"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="#F0EFF5"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="@drawable/style_row_bg"
                    android:padding="10dp"
                    android:id="@+id/my_lay_shopper"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/shopclass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="店主课堂"
                        android:textSize="12sp"
                        android:textColor="#818181"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:background="#F0EFF5"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <LinearLayout
                android:padding="0dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@drawable/style_row_bg"
                    android:padding="10dp"
                    android:id="@+id/my_lay_message"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="消息"
                        android:textColor="#818181"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="#F0EFF5"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="@drawable/style_row_bg"
                    android:padding="10dp"
                    android:id="@+id/my_lay_aboutme"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:text="关于我们"
                        android:textColor="#818181"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="#F0EFF5"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="@drawable/style_row_bg"
                    android:padding="10dp"
                    android:id="@+id/my_lay_feedback"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="反馈与建议"
                        android:textSize="12sp"
                        android:textColor="#818181"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="1dp"
                    android:background="#F0EFF5"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:background="@drawable/style_row_bg"
                    android:padding="10dp"
                    android:id="@+id/my_lay_set"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:text="设置"
                        android:textSize="12sp"
                        android:textColor="#818181"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <com.huotu.android.mifang.widget.ProgressWidget
        android:id="@+id/my_progress"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</android.support.design.widget.CoordinatorLayout>