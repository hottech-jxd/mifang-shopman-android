<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/order_item_lay_name"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/goods_item_logo"
            app:failureImage="@mipmap/ic_launcher"
            app:placeholderImage="@mipmap/ic_launcher"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:textColor="#343434"
            android:text=""
            android:textSize="14sp"
            android:id="@+id/goods_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:textColor="#A0A0A0"
            android:textSize="12sp"
            android:text=""
            android:id="@+id/goods_item_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/goods_item_unitPrice"
                android:text="ï¿¥0.0"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/goods_item_count"
                android:text="x0"
                android:textColor="#A0A0A0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

</LinearLayout>