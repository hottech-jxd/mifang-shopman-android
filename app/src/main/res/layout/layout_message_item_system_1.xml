<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/style_message_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<ImageView-->
        <!--android:src="@mipmap/message3"-->
        <!--android:id="@+id/message_item_system_logo"-->
        <!--android:layout_width="42dp"-->
        <!--android:layout_height="42dp"/>-->

    <TextView
        android:layout_marginRight="8dp"
        android:id="@+id/message_item_system_title"
        android:text="营养师到期通知"
        android:textColor="#838383"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_system_time"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_title"
        app:layout_constraintLeft_toLeftOf="@id/message_item_system_title"
        android:text="早上 10:8"
        android:textColor="#c3c3c3"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/message_item_system_1_logo"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_time"
        android:layout_marginTop="8dp"
        app:failureImage="@mipmap/ic_launcher"
        app:placeholderImage="@mipmap/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:textSize="14sp"
        android:textColor="#838383"
        app:layout_constraintTop_toTopOf="@id/message_item_system_1_logo"
        app:layout_constraintLeft_toRightOf="@id/message_item_system_1_logo"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLength="3"
        android:ellipsize="end"
        android:id="@+id/message_item_system_1_sub_title"
        android:layout_width="0dp"
        android:text="子标题"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_system_1_nickname"
        android:text="会员昵称:XXX"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_1_sub_title"
        app:layout_constraintLeft_toLeftOf="@id/message_item_system_1_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_system_1_ExpireTime"
        android:text="到期时间:2018-06-15"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_1_nickname"
        app:layout_constraintLeft_toLeftOf="@id/message_item_system_1_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_system_1_SurplusDay"
        android:text="剩余时间:15天"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_1_ExpireTime"
        app:layout_constraintLeft_toLeftOf="@id/message_item_system_1_ExpireTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="8dp"
        android:id="@+id/message_item_register_1_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_1_SurplusDay"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:padding="5dp"
        android:id="@+id/message_item_system_1_cash"
        android:text="立即续费"
        android:textColor="@color/bgcolor2"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_1_line"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_1_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>