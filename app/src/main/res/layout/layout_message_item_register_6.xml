<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/style_message_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_item_register_6_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:text="成功邀请用户成为营养师"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/message_item_register_6_time"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_6_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:text="中午 13:99"
        android:textSize="12sp"
        android:layout_height="wrap_content" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/message_item_register_6_avator"
        app:failureImage="@mipmap/ic_launcher"
        app:placeholderImage="@mipmap/ic_launcher"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_6_time"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:text="您好,恭喜您成功邀请了好友升级成为营养师"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/message_item_register_6_avator"
        app:layout_constraintTop_toTopOf="@id/message_item_register_6_avator"
        android:id="@+id/message_item_register_6_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="好友昵称:XXX"
        android:id="@+id/message_item_register_6_nickname"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_6_sub_title"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_6_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="升级时间：2018-07-07 11:00:00"
        android:id="@+id/message_item_register_6_UpgradeTime"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_6_nickname"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_6_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:text="获取收益：0"
        android:id="@+id/message_item_register_6_ProfitAmount"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_6_UpgradeTime"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_6_UpgradeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>