<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.huotu.android.mifang.fragment.Promotion1Fragment">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/promotion1_line_1"
        android:id="@+id/promotion1_lay_one"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:text="第1步"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="购买邀请开店账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        app:layout_constraintLeft_toRightOf="@id/promotion1_line_1"
        app:layout_constraintRight_toRightOf="@id/promotion1_line_2"
        app:layout_constraintTop_toTopOf="@id/promotion1_lay_one"
        android:id="@+id/promotion1_lay_two"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:text="第1步"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="购买邀请开店账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        app:layout_constraintTop_toTopOf="@id/promotion1_lay_two"
        app:layout_constraintLeft_toRightOf="@id/promotion1_line_2"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/promotion1_lay_three"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:text="第1步"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="购买邀请开店账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/promotion1_line_1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.constraint.Guideline
        android:id="@+id/promotion1_line_2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/promotion1_lay_desc"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/promotion1_lay_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_centerVertical="true"
            android:id="@+id/promotion1_line_3"

            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:text="说明"
            android:padding="10dp"
            android:background="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/promotion1_lay_desc"
        android:text="1、邀请说明?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="购买开店账号"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/promotion1_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
