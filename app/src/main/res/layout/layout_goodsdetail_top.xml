<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/goodsdetail_item_title"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="0dp"
        android:layout_below="@id/goodsdetail_item_title"
        android:id="@+id/goodsdetail_item_price"
        android:text="￥0.00"
        android:textSize="18sp"
        android:textColor="@color/textcolor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/goodsdetail_item_price"
        android:layout_marginTop="1dp"
        android:text="代理价：￥0.00元 或者 佣金：0元"
        android:id="@+id/goodsdetail_item_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>