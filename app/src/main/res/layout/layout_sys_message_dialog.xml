<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@color/white"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="消息标题"
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/biz_message_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"
        android:gravity="left|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/sys_message_dialog_logo"
            android:src="@mipmap/ic_launcher"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/sys_message_dialog_content"
            android:layout_toRightOf="@id/sys_message_dialog_logo"
            android:layout_alignTop="@id/sys_message_dialog_logo"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:maxLines="6"
            android:ellipsize="end"
            android:text="消息内容消息内消消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容息内容消息内容消息内容容消消息内容消息内容消息内容消息内容息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容消息内容"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <View
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

<LinearLayout
    android:padding="0dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/sys_message_dialog_cancel"
        android:text="取消"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="0dp"
        android:background="@color/light_gray"
        android:layout_width="1dp"
        android:layout_height="40dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:id="@+id/sys_message_dialog_operate"
        android:text="确定"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

</LinearLayout>


    </LinearLayout>

</RelativeLayout>