<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@drawable/style_message_bg"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_item_register_4_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:text="下线会员注册成功通知"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/message_item_register_4_time"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_4_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:text="中午 13:99"
        android:textColor="#c3c3c3"
        android:textSize="12sp"
        android:layout_height="wrap_content" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginTop="4dp"
        android:layout_width="50dp"
        app:placeholderImage="@mipmap/avator"
        app:failureImage="@mipmap/avator"
        app:actualImageScaleType="centerCrop"
        app:placeholderImageScaleType="centerCrop"
        app:failureImageScaleType="centerCrop"
        android:id="@+id/message_item_register_4_logo"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_4_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:textColor="#838383"
        android:text="您好，您的团队有新的会员加入"
        app:layout_constraintLeft_toRightOf="@id/message_item_register_4_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/message_item_register_4_logo"
        android:id="@+id/message_item_register_4_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="会员昵称:XXX"
        android:textColor="#838383"
        android:id="@+id/message_item_register_4_nickname"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_4_content"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_4_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="注册时间:2018-06-07 15:00:00"
        android:textColor="#838383"
        android:id="@+id/message_item_register_4_registertime"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_4_nickname"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_4_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="推荐人：XXX"
        android:textColor="#838383"
        android:id="@+id/message_item_register_4_RefereeNickName"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_4_registertime"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_4_registertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>