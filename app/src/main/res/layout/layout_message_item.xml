<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/style_message_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@mipmap/message3"
        android:id="@+id/message_item_logo"
        android:layout_width="46dp"
        android:layout_height="46dp"/>
    <TextView
        android:layout_marginRight="8dp"
        android:id="@+id/message_item_title"
        app:layout_constraintTop_toTopOf="@id/message_item_logo"
        app:layout_constraintLeft_toRightOf="@id/message_item_logo"
        android:text="sdfadf"
        android:textColor="#838383"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_time"
        app:layout_constraintBottom_toBottomOf="@id/message_item_logo"
        app:layout_constraintLeft_toRightOf="@id/message_item_logo"
        android:text="sdfadf"
        android:textColor="#c3c3c3"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/message_item_bg"
        app:layout_constraintTop_toBottomOf="@id/message_item_logo"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#838383"
        app:layout_constraintTop_toBottomOf="@id/message_item_bg"
        android:id="@+id/message_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>