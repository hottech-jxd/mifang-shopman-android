<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:clickable="true"
    android:id="@+id/message_item_system_0_container"
    android:background="@drawable/style_message_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:clickable="false"
        android:src="@mipmap/message3"
        android:id="@+id/message_item_system_0_logo"
        android:layout_width="42dp"
        android:layout_height="42dp"/>

    <TextView
        android:clickable="false"
        android:layout_marginRight="8dp"
        android:id="@+id/message_item_system_0_title"
        app:layout_constraintTop_toTopOf="@id/message_item_system_0_logo"
        app:layout_constraintLeft_toRightOf="@id/message_item_system_0_logo"
        android:text="系统消息"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:clickable="false"
        android:id="@+id/message_item_system_0_time"
        app:layout_constraintBottom_toBottomOf="@id/message_item_system_0_logo"
        app:layout_constraintLeft_toRightOf="@id/message_item_system_0_logo"
        android:text="2018-08-08 12:00:00"
        android:textColor="#c3c3c3"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:clickable="false"
        android:id="@+id/message_item_system_0_bg"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_0_logo"
        android:layout_marginTop="8dp"
        android:src="@mipmap/avator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#838383"
        android:text=""
        android:maxLines="4"
        android:ellipsize="end"
        android:clickable="false"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_0_bg"
        android:id="@+id/message_item_system_0_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>