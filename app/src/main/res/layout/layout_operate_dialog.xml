<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/operate_dialog_header"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/operate_dialog_title"
            android:text="编辑"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:id="@+id/operate_dialog_line"
        android:layout_below="@id/operate_dialog_header"
        android:background="@color/bg_line"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/operate_dialog_list"
        android:layout_below="@id/operate_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>