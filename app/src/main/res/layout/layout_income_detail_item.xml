<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/income_detail_item_header_1"
        android:text="5月1日"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/income_detail_item_header_2"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:text="订单数"
        android:textColor="@android:color/black"
        android:id="@+id/income_detail_item_header_2"
        android:layout_width="0dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/income_detail_item_header_1"
        app:layout_constraintRight_toLeftOf="@id/income_detail_item_header_3"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content" />
    <TextView
        android:text="收益"
        android:textColor="@android:color/black"
        android:id="@+id/income_detail_item_header_3"
        android:layout_width="0dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/income_detail_item_header_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>