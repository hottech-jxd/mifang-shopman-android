<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.huotu.android.mifang.fragment.PromotionFragment">

    <LinearLayout
        android:id="@+id/promotion_header"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:text="邀请入驻"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="10dp"
            android:background="#bababa"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/promotion_avator"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/promotion_username"
                android:text="jinxiangdong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/promotion_user_type"
                android:text="营养师"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!--<LinearLayout-->
        <!--android:id="@+id/promotion_lay_banner"-->
        <!--android:orientation="vertical"-->
        <!--android:clipChildren="false"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <com.huotu.android.mifang.widget.ViewPager
            android:clipToPadding="false"
            android:id="@+id/promotion_banner"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"/>
    <!--</LinearLayout>-->



    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/promotion_banner"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/promotion_viewPager"
        android:layout_width="match_parent"
        android:background="@color/bottom_container_bg"
        android:layout_height="match_parent"/>

</android.support.v7.widget.LinearLayoutCompat>
