<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/style_message_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<ImageView-->
        <!--android:src="@mipmap/message3"-->
        <!--android:id="@+id/message_item_system_logo"-->
        <!--android:layout_width="42dp"-->
        <!--android:layout_height="42dp"/>-->

    <TextView
        android:layout_marginRight="8dp"
        android:id="@+id/message_item_system_3_title"
        android:text="货款不足通知"
        android:textColor="#838383"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_system_3_time"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_3_title"
        app:layout_constraintLeft_toLeftOf="@id/message_item_system_3_title"
        android:text="早上 10:8"
        android:textColor="#c3c3c3"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/message_item_3_logo"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_3_time"
        android:layout_marginTop="8dp"
        app:failureImage="@mipmap/ic_launcher"
        app:placeholderImage="@mipmap/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#838383"
        app:layout_constraintTop_toTopOf="@id/message_item_3_logo"
        app:layout_constraintLeft_toRightOf="@id/message_item_3_logo"
        android:id="@+id/message_item_system_3_sub_title"
        android:layout_width="wrap_content"
        android:text="子标题"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_system_3_nickname"
        android:text="昵称"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_3_sub_title"
        app:layout_constraintLeft_toLeftOf="@id/message_item_system_3_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_system_3_LockIntegral"
        android:text="冻结收益:1005"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_3_nickname"
        app:layout_constraintLeft_toLeftOf="@id/message_item_system_3_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_system_3_OweDeposit"
        android:text="已欠货款:1545"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_3_LockIntegral"
        app:layout_constraintLeft_toLeftOf="@id/message_item_system_3_LockIntegral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/message_item_system_3_cash"
        android:text="立即充值"
        app:layout_constraintTop_toBottomOf="@id/message_item_system_3_OweDeposit"
        app:layout_constraintLeft_toLeftOf="@id/message_item_system_3_OweDeposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>