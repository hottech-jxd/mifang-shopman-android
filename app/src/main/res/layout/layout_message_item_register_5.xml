<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/style_message_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/message_item_register_5_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:text="用户升级为代理商"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="2dp"
        android:id="@+id/message_item_register_5_time"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_5_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:text="中午 13:99"
        android:textColor="#c3c3c3"
        android:textSize="12sp"
        android:layout_height="wrap_content" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/message_item_register_5_avator"
        app:failureImage="@mipmap/avator"
        app:placeholderImage="@mipmap/avator"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_5_time"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:layout_marginLeft="4dp"
        android:layout_marginTop="0dp"
        android:textSize="14sp"
        android:text="您好,恭喜您成功升级成为代理商"
        android:textColor="#838383"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/message_item_register_5_avator"
        app:layout_constraintTop_toTopOf="@id/message_item_register_5_avator"
        android:id="@+id/message_item_register_5_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:text="会员昵称:XXX"
        android:id="@+id/message_item_register_5_nickname"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_5_sub_title"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_5_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="现有货款：0"
        android:id="@+id/message_item_register_5_SurplusDeposit"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_5_nickname"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_5_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="8dp"
        android:id="@+id/message_item_register_5_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_5_SurplusDeposit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:text="查看小店"
        android:padding="5dp"
        android:textColor="@color/bgcolor2"
        android:id="@+id/message_item_register_5_see"
        app:layout_constraintTop_toBottomOf="@id/message_item_register_5_line"
        app:layout_constraintLeft_toLeftOf="@id/message_item_register_5_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>